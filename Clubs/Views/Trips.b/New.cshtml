@section Scripts {
    <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <script type="text/javascript">var editor = new Quill('.editor', { theme: "snow" });</script>
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
}
<form>
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <div class="editor"></div>
    </div>
    <div class="form-group">
        <label>Price</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
        </div>
    </div>
    <div class="form-group">
        <label>Maximum Participants</label>
        <input type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label>Skill Level Required</label>
        <div class="input-group">

            <select class="selectpicker" multiple>
                <option>N/A</option>
                <option>Snow School</option>
                <option>Advanced Snow School</option>
                <option>Outdoor Lead</option>
                <option>Multipitch</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <button class="btn-primary btn">Create</button>
    </div>
</form>

